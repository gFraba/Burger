  <div id="container">

    <div id="image" class="box">
        <img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="delicious burger" />
    </div>


    <div id="burgerToEat">
        {{#each burgers}}
        {{#unless devoured}}

        <div class="text">
            {{burger_name}}
            <button data-id="{{id}}" class="devoure-burger">Devoure it!</button>
        </div>

        {{/unless}}
        {{/each}}
    </div>

    <div id="devouredBurgers">
        {{#each burgers}}
        {{#if devoured}}

        <div class="text">
            {{burger_name}}
            <button data-id="{{id}}" class="delete-burger">Delete it!</button>
        </div>

        {{/if}}
        {{/each}}
    </div>


    <form id="addBurgerForm">
        <input type="text" id="add-burger" placeholder="Enter a burger">
        <br>
        <button type="submit" id="submit">Submit</button>
    </form>

</div>