  
<div id="container">

    <div id="image" class="box">
        <img src="https://twisper.com/wp-content/uploads/2020/03/close-up-photo-of-burger-3915906-scaled.jpg" alt="delicious burger" />
    </div>


    <div id="burgerToEat">
        {{#each burgers}}
        {{#unless devoured}}

        <div class="text">
            {{burger_name}}
            <button data-id="{{id}}" class="devoure-burger">Devoure it!</button>
        </div>

        {{/unless}}
        {{/each}}
    </div>

    <div id="devouredBurgers">
        {{#each burgers}}
        {{#if devoured}}

        <div class="text">
            {{burger_name}}
            <button data-id="{{id}}" class="delete-burger">Delete it!</button>
        </div>

        {{/if}}
        {{/each}}
    </div>


    <form id="addBurgerForm">
        <input type="text" id="add-burger" placeholder="Enter a burger">
        <br>
        <button type="submit" id="submit">Submit</button>
        <p>Enter a burger you want to eat
            <br>
            and click the "Submit" button!
        </p>
    </form>

</div>